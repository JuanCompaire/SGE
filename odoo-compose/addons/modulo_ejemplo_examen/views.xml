<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="shinra_action" model="ir.actions.act_window">
        <field name="name">Action shinra</field>
        <field name="res_model">final_fantasy.shinra</field>
        <field name="view_mode">tree,form,calendar</field>
    </record>

    <record id="shinra_tree" model="ir.ui.view">
        <field name="name">shinra.tree</field>
        <field name="model">final_fantasy.shinra</field>
        <field name="arch" type="xml">
            <tree string="shinra">
                <field name="name" />
                <field name="fecha_nacimiento" />
            </tree>
        </field>
    </record>

    <record id="shinra_form" model="ir.ui.view">
        <field name="name">shinra.form</field>
        <field name="model">final_fantasy.shinra</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="fecha_nacimiento" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="shinra_calendar" model="ir.ui.view">
        <field name="name">shinra.calendar</field>
        <field name="model">final_fantasy.shinra</field>
        <field name="arch" type="xml">
            <calendar string="shinra" date_start="fecha_nacimiento">
                <field name="name" />
            </calendar>
        </field>
    </record>

    <menuitem
        id="final_fantasy"
        name="Final Fantasy"
        sequence="10" />

    <menuitem 
        id="shinra_menu"
        name="Shinra"
        action="shinra_action"
        parent="final_fantasy" />

</odoo>

